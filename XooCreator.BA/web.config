<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <!-- Set max allowed content length to 600MB (629145600 bytes) for file uploads -->
        <!-- This is required for Azure App Service (IIS) to allow large file uploads -->
        <requestLimits maxAllowedContentLength="629145600" />
      </requestFiltering>
    </security>
    <!-- Increase execution timeout for large file uploads (10 minutes) -->
    <httpRuntime maxRequestLength="614400" executionTimeout="600" />
  </system.webServer>
</configuration>

